#!/usr/bin/env python

import SimpleHTTPServer
import SocketServer
import os
import sys
import socket
from subprocess import Popen, PIPE

INIT_PORT = 8000


def get_valid_host():
    socket.gethostname()
    (host, hosts, ip) = socket.gethostbyaddr(socket.gethostname())
    if host.startswith('localhost'):
        return ip
    return host


def send_to_clipboard(text):
    try:
        clip = Popen('xclip', stdin=PIPE)
        clip.stdin.write(text)
        clip.stdin.close()
    except OSError:
        print "xclip command isn't found, can't copy uri to clipboard"
    else:
        print "uri was pasted to your clipboard"


host = get_valid_host()

Handler = SimpleHTTPServer.SimpleHTTPRequestHandler

PORT = INIT_PORT

while True:
    try:
        httpd = SocketServer.TCPServer(("", PORT), Handler)
    except:
        PORT += 1
        if PORT > (INIT_PORT + 10):
            break
    else:
        break


if len(sys.argv) > 1:
    uri = "http://%s:%s/%s" % (host, PORT, sys.argv[1])
else:
    uri = "http://%s:/%s/" % (host, PORT)

print uri
send_to_clipboard(uri)


print "Ctrl + C stop the server"


httpd.serve_forever()
